---
import "@fontsource/playfair/500.css";

interface Props {
  pageIntro: string;
}

const { pageIntro } = Astro.props;
const currentPath = Astro.url.pathname.slice(1);
---

<header class="flex items-center justify-between mt-8 mb-16">
  <!-- Name on the left as a bold link to the homepage -->
  <div class="">
    <a href="/" class="font-bold">/patrick_soo/</a><span>{currentPath}</span>
  </div>

  <nav>
    <ul class="flex space-x-6">
      {
        "/" + currentPath !== "/portfolio" && (
          <li>
            <a
              href="/portfolio"
              class="hover:bg-sky-200 transition-colors duration-300"
            >
              portfolio
            </a>
          </li>
        )
      }
      <li>
        <!-- open resume in new tab. _blank for new tab, rel for security purposes -->
        <a
          href="/resume.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:bg-sky-200 transition-colors duration-300">résumé</a
        >
      </li>

      <li>
        <!-- open resume in new tab. _blank for new tab, rel for security purposes -->
        <a
          href="/coverletter.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:bg-sky-200 transition-colors duration-300"
          >cover letter</a
        >
      </li>
    </ul>
  </nav>
</header>
<h1 class="text-4xl font-playfair mb-16">{pageIntro}</h1>
